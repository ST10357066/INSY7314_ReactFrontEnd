  "type": "module",
  "dependencies": {
    "@hono/zod-validator": "^0.5.0",
    "hono": "4.7.7",
    "i18next": "^25.3.2",
    "lucide-react": "^0.510.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-i18next": "^15.6.1",
    "react-router": "^7.5.3",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.9.6",
    "@eslint/js": "9.25.1",
    "@types/node": "22.14.1",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@vitejs/plugin-react": "4.4.1",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "eslint": "9.25.1",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "globals": "15.15.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "5.8.3",
    "typescript-eslint": "8.31.0",
    "vite": "6.3.2",
    "wrangler": "^4.25.0"
  },
  "scripts": {
    "build": "tsc -b && vite build",
    "build:gh-pages": "cross-env NODE_ENV=production tsc -b && vite build",
    "cf-typegen": "wrangler types",
    "check": "tsc && vite build && wrangler deploy --dry-run",
    "dev": "vite",
    "lint": "eslint .",
    "docs:serve": "npx serve docs -p 3000",
    "docs:build": "npm run build && cp -r dist docs",
    "docs:clean": "rm -rf docs",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:prod": "wrangler deploy --env production",
    "preview": "vite preview",
    "deploy:gh-pages": "node scripts/deploy-gh-pages.js"
  }
}
